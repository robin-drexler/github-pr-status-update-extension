{
  "name": "Github PR notifier",
  "version": "0.0.1",
  "icons": {
    "16": "/img/icons/icon_16.png",
    "48": "/img/icons/icon_48.png",
    "128": "/img/icons/icon_128.png"
  },

  "description": "Yay, I'm so useless.",
  "permissions": [
    "https://github.com/*",
    "https://*.github.com/*",
    "tabs",
    "storage",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "run_at": "document_end",
      "js": ["./dist/content-script/content-script.js"]
    }
  ],
  "background": { "scripts": ["/dist/background/background.js"] },
  "options_ui": {
    "page": "/dist/options/options.html",
    "open_in_tab": true
  },
  "manifest_version": 2
}
