{
  "name": "Github PR notifier",
  "version": "0.0.1",
  "icons": {
    "16": "/img/icons/icon_16.png",
    "48": "/img/icons/icon_48.png",
    "128": "/img/icons/icon_128.png"
  },

  "description": "Yay, I'm so useless.",
  "permissions": [
    "https://github.com/*",
    "https://*.github.com/*",
    "tabs",
    "storage",
    "notifications"
  ],

  "background": { "scripts": ["/dist/background/background.js"] },
  "page_action": {
    "default_icon": "img/icons/icon_48.png",
    "default_title": "github",
    "popup": "p.html"
  },

  "manifest_version": 2
}
