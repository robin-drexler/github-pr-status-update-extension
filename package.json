{
  "name": "Simple-Chrome-Extension-Content-Script-Skeleton",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:background": "parcel build --out-dir extension/dist/background src/background.js",
    "watch:background": "parcel watch --out-dir extension/dist/background src/background.js --no-hmr",
    "build:cs": "parcel build --out-dir extension/dist/content-script src/content-script/content-script.js",
    "watch:cs": "parcel watch --out-dir extension/dist/content-script src/content-script/content-script.js --no-hmr",
    "build:options": "parcel build --out-dir extension/dist/options --public-url /dist/options/ src/options/options.html",
    "watch:options": "parcel watch --out-dir extension/dist/options --public-url /dist/options/ src/options/options.html --no-hmr",
    "build": "rm -rf .cache extension/dist && yarn build:cs && yarn build:background && yarn build build:options"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robin-drexler/Simple-Chrome-Extension-Content-Script-Skeleton.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/robin-drexler/Simple-Chrome-Extension-Content-Script-Skeleton/issues"
  },
  "homepage": "https://github.com/robin-drexler/Simple-Chrome-Extension-Content-Script-Skeleton",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-jest": "^24.8.0",
    "gulp": "^3.8.11",
    "gulp-watch": "^4.1.1",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.3",
    "prettier": "^1.18.2",
    "socket.io": "^1.3.4"
  },
  "browserslist": [
    "last 3 chrome versions",
    "last 3 firefox versions"
  ],
  "dependencies": {
    "@types/firefox-webext-browser": "^67.0.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "webextension-polyfill": "^0.4.0"
  }
}
